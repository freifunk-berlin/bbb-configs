{% if (networks | selectattr('tunnel_wan_ip', 'defined') | count > 0) and (openwrt_version == 'snapshot') %}
chain wg_maxseg {
    type filter hook forward priority -1; policy accept;
	oifname "wg_*" tcp flags syn tcp option maxseg size set meta nfproto map { ipv4 : 1372, ipv6 : 1352 }
	iifname "wg_*" tcp flags syn tcp option maxseg size set meta nfproto map { ipv4 : 1372, ipv6 : 1352 }
}
{% endif %}
